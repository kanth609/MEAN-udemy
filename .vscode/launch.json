{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node JS",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node/server.ts",
      "skipFiles": ["<node_internals/**"],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Backend (ts-node)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["ts-node"],
      "args": ["node/server.ts"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}
